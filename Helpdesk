import React from 'react';

const TicketList = ({ tickets, onSelect }) => {
  return (
    <div>
      <h2>Select a problem:</h2>
      <ul>
        {tickets.map(ticket => (
          <li key={ticket.id}>
            <button onClick={() => onSelect(ticket)}>{ticket.title}</button>
          </li>
        ))}
      </ul>
    </div>
  );
};

export default TicketList;


import React from 'react';

const SolutionSteps = ({ ticket }) => {
  return (
    <div>
      <h3>{ticket.title}</h3>
      <ol>
        {ticket.steps.map((step, index) => (
          <li key={index}>{step}</li>
        ))}
      </ol>
    </div>
  );
};

export default SolutionSteps;




import React, { useState } from 'react';
import TicketList from './components/TicketList';
import SolutionSteps from './components/SolutionSteps';
import tickets from './data/tickets.json';

function App() {
  const [selectedTicket, setSelectedTicket] = useState(null);

  return (
    <div style={{ padding: '20px', fontFamily: 'Arial' }}>
      <h1>üõ†Ô∏è HelpDeskSim</h1>
      {!selectedTicket ? (
        <TicketList tickets={tickets} onSelect={setSelectedTicket} />
      ) : (
        <SolutionSteps ticket={selectedTicket} />
      )}
    </div>
  );
}

export default App;import React, { useState } from 'react';
